<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player to follow"
        android:textSize="15dp"
        android:textStyle="italic"
        android:typeface="serif" />

    <AutoCompleteTextView
        android:id="@+id/edit_filter"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:completionThreshold="1"
        android:ems="10"
        android:hint="Search for player..."
        android:inputType="text" >

        <requestFocus />
    </AutoCompleteTextView>

    <Button
        android:id="@+id/button_save_widget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_filter"
        android:text="Create Widget" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_save_widget"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="@string/no_player"
        android:textSize="20dp" />

</RelativeLayout>